<div class="container">

  <h2 class="page-title">All Boards</h2>

  <div class="boards">
    <% @boards.each do |board| %>
      <div class="board">
        <div class="board_content">
          <div class="board_text">
            <div class="board_name">
              <%= board.name %>
            </div>
            <div class="board_description">
              <%= board.description %>
            </div>
          </div>

          <div class="board_detail_actions">
            <div class="dropdown">
              <%= image_tag 'combined-shape', class: "board_action-button" %>
              <div class="dropdown-content">
                <%= image_tag 'card1.png', class: "dropdown-content-bg" %>
                <div class="dropdown-content-link-menu">
                  <%= link_to 'Edit', edit_board_path(board), class: "dropdown-content-link" %>
                  <a href="" class="dropdown-content-link">Delete</a>
                </div>
              </div>
            </div>
          </div>

        </div>

        <div class="board_editor">
          <%= image_tag 'oval-man.png', class: "board_editor-icon" %>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to new_board_path do %>
    <div class="add-new-board">
      <p class="add-new-board_text">+ Add new board</p>
    </div>
  <% end %>
</div>
