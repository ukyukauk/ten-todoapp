.board
  .board_content
    .board_text
      .board_name
        = board.name
      .board_description
        = board.description
    .board_detail_actions
      .dropdown
        = image_tag 'combined-shape', class: "board_action-button"
        .dropdown-content
          = image_tag 'card1.png', class: "dropdown-content-bg"
          .dropdown-content-link-menu
            = link_to 'Edit', edit_board_path(board), class: "dropdown-content-link"
            = link_to 'Delete', board_path(board), data: {method: 'delete', confirm: '削除してもよろしいですか？'}, class: "dropdown-content-link"
  .board_editor
    = image_tag 'oval-man.png', class: "board_editor-icon"
